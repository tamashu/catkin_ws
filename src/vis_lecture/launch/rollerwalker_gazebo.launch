<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(find vis_lecture)/xacro/rollerWalker_gazebo.xacro" />
  <param name="robot_description" command="$(find xacro)/xacro $(arg model) --inorder"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model rollerWalker" />

  <!-- <rosparam command="load" file="$(find gazebo_urdf_lecture)/config/diff_drive_controller.yaml" ns="/rollerWalker" /> -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/rollerWalkert" 
      args="diff_drive_controller" />
</launch>